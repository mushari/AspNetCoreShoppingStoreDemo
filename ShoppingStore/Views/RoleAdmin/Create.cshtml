@model string
@inject IViewLocalizer Localizer
<div class="bg-primary panel-body">
    <h4>@Localizer["CreateRole"]</h4>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" asp-controller="RoleAdmin" method="post">
    <div class="form-group">
        <label for="name">@Localizer["RoleName"]</label>
        <input name="name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["Submit"]</button>
    <a asp-action="Index" class="btn btn-default">@Localizer["Cancel"]</a>
</form>