@model Order

@inject IViewLocalizer Localizer

<h2>@Localizer["CheckoutForm"]</h2>
<p>@Localizer["OrderDetail"]</p>

<form asp-controller="Order" asp-action="Checkout" asp-antiforgery="true" method="post">
    <h3>@Localizer["ShipTo"]</h3>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <h3>@Localizer["Address"]:</h3>
    <div class="form-group">
        <label asp-for="Line1">@Localizer["AddressLine"]1</label>
        <input asp-for="Line1" class="form-control" />
        <span asp-validation-for="Line1"></span>
    </div>
    <div class="form-group">
        <label asp-for="Line2">@Localizer["AddressLine"]2</label>
        <input asp-for="Line2" class="form-control" />
        <span asp-validation-for="Line2"></span>
    </div>
    <div class="form-group">
        <label asp-for="Line3">@Localizer["AddressLine"]3</label>
        <input asp-for="Line3" class="form-control" />
        <span asp-validation-for="Line3"></span>
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City"></span>
    </div>
    <div class="form-group">
        <label asp-for="State"></label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State"></span>
    </div>
    <div class="form-group">
        <label asp-for="Zip"></label>
        <input asp-for="Zip" class="form-control" />
        <span asp-validation-for="Zip"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country"></span>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="@Localizer["CompleteOrder"]" />
    </div>
</form>


